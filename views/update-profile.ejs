<script>

  function _(element) {
    return document.getElementById(element);
  }

  function fetch_data(parent_element, child_element, type) {
    fetch('/update-profile/get_data?type=' + type + '&parent_value=' + parent_element.value + '').then(
      function (response) {
        return response.json();

      }).then(function (responseData) {
        var html = '';

        if (type == 'load_district') {
          html = '<option disabled selected value="">District</option>';
        }
        if (type == 'load_city') {
          html = '<option disabled selected value="">City</option>';
        }
        for (var count = 0; count < responseData.length; count++) {
          html += '<option value="' + responseData[count] + '">' + responseData[count] + '</option>';
        }

        child_element.innerHTML = html;
      });
  }
  _('division').onchange = function () {

    fetch_data(_('division'), _('district'), 'load_district');

  };

  _('district').onchange = function () {

    fetch_data(_('district'), _('city'), 'load_city');

  };


</script>